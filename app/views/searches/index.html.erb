<div class="row">
  <div class="col-md-10 col-md-offset-2">
    <%= simple_form_for @search, url: searches_path, html: { class: 'form-horizontal navbar-form' } do |f| %>
      <div class="input-group input-group-lg col-lg-10">
        <%= f.text_field :keywords, class: 'form-control input-lg', placeholder: "Input anywords to search..." %>
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="clearfix" id="photos" data-links="<%= "/fetch_more?page=2&id=#{params[:id]}" %>">
    <%= render partial: "photo", collection: @items %>
  </div>
</div>
